<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StepCounter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_200</item>
        <item name="colorSecondaryVariant">@color/grey_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="fontFamily">@font/exo_2_app_font</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="MyTextViewStyle28" parent="MyTextViewStyle">
        <item name="android:textSize">28sp</item>

    </style>

    <style name="MyTextViewStyle24" parent="MyTextViewStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MyTextViewStyle20" parent="MyTextViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MyTextViewStyle16" parent="MyTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="MyBottomNavStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="itemIconTint">@color/bottom_nav_color_night</item>
        <item name="itemTextColor">@color/bottom_nav_color_night</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>